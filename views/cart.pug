extends layout
block body
	.navbar-wrapper
		.container
			nav( role="navigation", class=["navbar", "navbar-inverse"] )
				.navbar-header
					button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#dropdown_menu", aria-expanded="false", aria-controls="navbar")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="/") Hipster Clothing co.

				#dropdown_menu.collapse.navbar-collapse
					ul.nav.navbar-nav
						+nav_item("/") Men
						+nav_item("/") Women
						+nav_item("/") Accessories
					ul.nav.navbar-nav.navbar-right
						+nav_item("/auth/facebook") Login
						+nav_item("/Cart","active") Cart 
							span.glyphicon.glyphicon-shopping-cart
							

	.container
		.col-md-13
		+panel-default("Cart")
			table(style='width:100%')
				tr
					th Name
					th Quantity
					th Price
				tr
					td Shirt
					td 1
					td 25.00

	include footer



