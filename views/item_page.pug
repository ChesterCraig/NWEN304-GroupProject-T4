extends layout
block body
	.navbar-wrapper
		.container
			nav( role="navigation", class=["navbar", "navbar-inverse"] )
				.navbar-header
					button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#dropdown_menu", aria-expanded="false", aria-controls="navbar")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="/") Hipster Clothing co.

				#dropdown_menu.collapse.navbar-collapse
					ul.nav.navbar-nav
						+nav_item("/") Men
						+nav_item("/") Women
						+nav_item("/") Accessories
					ul.nav.navbar-nav.navbar-right
						+nav_item("/auth/facebook") Login
						+nav_item("/Cart") Cart 
							span.glyphicon.glyphicon-shopping-cart
    
	.container
		.col-md-3
			p.lead Shop Name
				+list-group-links([
					{text:"Link 1",url:"/items/1"},
					{text:"Link 2",url:"/items/2"},
					{text:"Link 3",url:"/items/3"},],0)
		
		.col-md-9
			hr.featurette-divider
			.row.featurette
				.col-md-5
					img.featurette-image.img-responsive.center-block(src='..'+image_path)
				.col-md-7
					h2.featurette-heading
						| #{name}. 
					h3 #{description}.
					h4 $ #{price}
					+btn("Add To Cart")
			hr.featurette-divider
		
		footer
			p.pull-right
				a(href='#') Back to top




